@{
    ViewBag.Title = "Вход";
}

<style>
    .login-container {
        display: flex;
        flex-direction: column;
        justify-content: center; /* Вертикальное центрирование внутри контейнера */
        align-items: center; /* Горизонтальное центрирование внутри контейнера */
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px; /* Ограничиваем максимальную ширину формы */
        margin: 20px auto; /* Центрируем сам контейнер по горизонтали и добавляем отступ сверху */
    }

    .form-group {
        margin-bottom: 20px;
        width: 100%; /* Занимает всю ширину контейнера */
    }

    label {
        font-weight: bold;
        color: #495057;
        display: block; /* Занимает всю ширину */
        margin-bottom: 5px;
        text-align: left; /* Выравниваем текст слева */
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 10px;
        width: 100%; /* Занимает всю ширину контейнера */
        box-sizing: border-box; /* Важно для учета padding и border в ширине */
    }

    .text-danger {
        color: #dc3545;
        margin-top: 5px;
        text-align: left; /* Выравниваем текст слева */
    }

    .btn-default {
        background-color: #007bff; /* Синий цвет кнопки */
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        width: 100%; /* Кнопка на всю ширину контейнера */
        box-sizing: border-box; /* Важно для учета padding и border в ширине */
    }

        .btn-default:hover {
            background-color: #0056b3;
        }

    h2 {
        text-align: center;
        color: #343a40;
        margin-bottom: 10px; /* Уменьшаем отступ снизу */
    }

    h4 {
        text-align: center;
        color: #6c757d;
        margin-bottom: 15px; /* Уменьшаем отступ снизу */
    }

    hr {
        border-top: 1px solid #dee2e6;
        margin-bottom: 15px; /* Уменьшаем отступ снизу */
    }
</style>

<h2>Вход</h2>

<div class="login-container">
    @using (Html.BeginForm("Login", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Логин")
            @Html.TextBox("Login", "", new { @class = "form-control" })
            @Html.ValidationMessage("Login", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Пароль")
            @Html.Password("Password", "", new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-default" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}